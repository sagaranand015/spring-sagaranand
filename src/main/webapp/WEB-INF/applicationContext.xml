<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 	http://www.springframework.org/schema/mvc
 	http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
 	http://www.springframework.org/schema/context
 	http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- The .properties file for parameters from outside -->
	<!-- <context:property-placeholder
		location="WEB-INF/properties/monitor-app.properties" /> -->

	<context:component-scan base-package="com.sagaranand.website.controllers" />
	<context:component-scan base-package="com.sagaranand.website.client" />
	<context:component-scan base-package="com.sagaranand.website.core" />

	<mvc:annotation-driven />

	<bean id="client" class="com.sagaranand.website.client.GenericClient"></bean>
	
	<bean id="clientController" class="com.sagaranand.website.controllers.ClientController"></bean>

	<bean id="mail" class="com.sagaranand.website.core.MailImpl">
		<property name="apiKey" value="41ePKTnx5DEoaYJmC3EEjw"></property>
		<property name="fromEmail" value="query@sagaranand.com"></property>
		<property name="fromName" value="Sagar Anand"></property>
	</bean>
	
	<bean id="mailUtilities" class="com.sagaranand.website.utilities.MailUtilities">
		<property name="contactReplySubject" value="I have received your Query!"></property>
		<property name="contactReplyMessage" value="This is the reply message from query@sagaranand.com"></property>
		<property name="contactAdminEmail" value="query@sagaranand.com"></property>
		<property name="contactAdminName" value="Sagar Anand"></property>
		<property name="contactAdminSubject" value="Query Received from SagarAnand.com Contact Page"></property>
	</bean>

</beans>